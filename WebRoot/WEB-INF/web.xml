         gov.nih.nci.cadsrpasswordchange.core.MainServlet
     </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
     <servlet-name>
         SimpleServlet
     </servlet-name>
     <url-pattern>
         /base
     </url-pattern>
  </servlet-mapping>




